{
  "name": "@ulixee/net",
  "private": true,
  "version": "2.0.0-alpha.3",
  "description": "Common networking for the Ulixee projects",
  "license": "MIT",
  "scripts": {
    "prepare": "husky install",
    "build": "pwd && yarn tsc && ulx-repo-after-build && cd ./build && yarn install -focus",
    "build:dist": "shx rm -rf build-dist && tsc -b tsconfig.dist.json && ulx-repo-after-build --dist",
    "tsc": "tsc -b -i tsconfig.json",
    "watch": "tsc -b -i -w tsconfig.json",
    "test": "cross-env NODE_ENV=test jest",
    "lint": "eslint --cache ./"
  },
  "dependencies": {
    "@ulixee/commons": "2.0.0-alpha.3",
    "ws": "^7.4.6"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.0.1",
    "@commitlint/config-conventional": "^12.0.1",
    "@types/node": "^14.18.18",
    "@ulixee/repo-tools": "1.0.7",
    "cross-env": "^7.0.3",
    "@types/jest": "^27.5.1",
    "jest": "^27.5.1",
    "jest-environment-node": "^27.5.1",
    "jest-summary-reporter": "^0.0.2",
    "husky": "^7.0.1",
    "lint-staged": "^10.5.2",
    "shx": "^0.3.3",
    "typescript": "~4.5.5",
    "@types/ws": "^7.4.7"
  },
  "workspaces": {
    "packages": [
      "../commons/build"
    ]
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix"
    ],
    "*.json": [
      "prettier --write"
    ]
  }
}
